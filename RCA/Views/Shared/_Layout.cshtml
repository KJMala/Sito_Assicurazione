            @{ if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("admin")) { 
                         <div class="d-flex align-item-center">
                             <ul class="d-flex list-unstyled gap-3 ms-2 align-items-center mb-0">
                                 <li>@Html.ActionLink("Clienti", "Dashboard", "RCA", new { area = "" }, new { @class = "nav-link text-white" })</li>
                                 <li>@Html.ActionLink("Veicoli", "DashboardVeicoli", "RCA", new { area = "" }, new { @class = "nav-link text-white" })</li>
                                 <li>@Html.ActionLink("Polizze", "DashboardPolizze", "RCA", new { area = "" }, new { @class = "nav-link text-white" })</li>
                                 <li>@Html.ActionLink("Sinistri", "DashboardSinistri", "RCA", new { area = "" }, new { @class = "nav-link text-white" })</li>
                                 <li>
                                     <a href="/RCA/SignOut" class="btn btn-light">
                                         Logout <i class="fa-solid fa-door-open"></i>
                                     </a>
                                 </li>
                             </ul>
                         </div>
                    }
                    else if(User.IsInRole("user"))
                    {
                        <div class="d-flex align-item-center">
                            <ul class="d-flex list-unstyled gap-3 ms-2 align-items-center mb-0">
                                <li>@Html.ActionLink("Anagrafica", "InfoUtente", "User", new { ID = Session["idUser"] }, new { @class = "nav-link text-white" })</li>
                                <li>@Html.ActionLink("Polizze", "InfoPolizze", "User", new { ID = Session["idUser"] }, new { @class = "nav-link text-white" })</li>
                                <li>@Html.ActionLink("Sinistri", "CercaSinistro", "User", new { ID = Session["idUser"] }, new { @class = "nav-link text-white" })</li>
